{
  "name": "gql",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "build": "etsc",
    "lint": "ts-standard --fix",
    "start": "node dist/index.js",
    "db:generate": "edgeql-js --port 5656 --tls-security=insecure --output-dir ./src/db",
    "migration:create": "docker-compose exec edgedb edgedb --tls-security=insecure migration create -P 5656",
    "migration:apply": "docker-compose exec edgedb edgedb --tls-security=insecure migrate -P 5656",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.4.0",
    "@types/hapi__hapi": "^20.0.12",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.6.4",
    "@types/supertest": "^2.0.12",
    "@vitest/ui": "^0.21.1",
    "esbuild": "^0.14.53",
    "esbuild-node-tsc": "^1.8.8",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "ts-standard": "^11.0.0",
    "typescript": "^4.7.4",
    "vitest": "^0.21.1"
  },
  "dependencies": {
    "@hapi/hapi": "^20.2.2",
    "@pothos/core": "^3.13.0",
    "@pothos/plugin-scope-auth": "^3.11.0",
    "@pothos/plugin-simple-objects": "^3.4.0",
    "@pothos/plugin-validation": "^3.5.1",
    "apollo-server-core": "^3.10.0",
    "apollo-server-hapi": "^3.10.0",
    "argon2": "^0.28.7",
    "dayjs": "^1.11.4",
    "edgedb": "^0.21.3",
    "envalid": "^7.3.1",
    "graphql": "^16.5.0",
    "jsonwebtoken": "^8.5.1",
    "nanoid": "3.3.4",
    "zod": "^3.17.10"
  },
  "ts-standard": {
    "noDefaultIgnore": false,
    "ignore": [
      "dist",
      "src/db/**/*"
    ],
    "project": "./tsconfig.json",
    "report": "stylish"
  }
}
