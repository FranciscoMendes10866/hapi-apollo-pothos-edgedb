{
  "name": "gql",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "tsnd src/index.ts",
    "build": "unbuild",
    "lint": "ts-standard --fix",
    "start": "node dist/index.mjs",
    "db:generate": "edgeql-js --port 5656 --tls-security=insecure --output-dir ./src/db",
    "migration:create": "docker-compose exec edgedb edgedb --tls-security=insecure migration create -P 5656",
    "migration:apply": "docker-compose exec edgedb edgedb --tls-security=insecure migrate -P 5656"
  },
  "devDependencies": {
    "@types/node": "^18.6.4",
    "ts-standard": "^11.0.0",
    "typescript": "^4.7.4",
    "unbuild": "^0.7.6"
  },
  "dependencies": {
    "@pothos/core": "^3.13.0",
    "apollo-server-core": "^3.10.0",
    "apollo-server-koa": "^3.10.0",
    "argon2": "^0.28.7",
    "dayjs": "^1.11.4",
    "edgedb": "^0.21.3",
    "envalid": "^7.3.1",
    "graphql": "^16.5.0",
    "jose": "^4.8.3",
    "koa": "^2.13.4",
    "nanoid": "^4.0.0",
    "ts-node-dev": "^2.0.0",
    "zod": "^3.17.10"
  },
  "ts-standard": {
    "noDefaultIgnore": false,
    "ignore": [
      "dist",
      "src/db/**/*"
    ],
    "project": "./tsconfig.json",
    "report": "stylish"
  }
}
